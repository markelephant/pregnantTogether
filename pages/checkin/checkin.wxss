/* 容器 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 日历卡片 */
.calendar-card {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.calendar-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.month {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.weekdays {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.weekday {
  width: 80rpx;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}

.calendar-grid {
  display: flex;
  flex-wrap: wrap;
}

.calendar-day {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 10rpx 5rpx;
  border-radius: 50%;
  position: relative;
}

.calendar-day.empty {
  background: transparent;
}

.calendar-day.today {
  background: #e3f2fd;
  color: #1976d2;
}

.calendar-day.selected {
  background: #667eea;
  color: white;
}

.checkin-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #4caf50;
  position: absolute;
  bottom: 8rpx;
}

/* 打卡类型 */
.checkin-types {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.types-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.type-item {
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.type-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.type-name {
  font-size: 28rpx;
  color: #666;
}

/* 今日记录 */
.today-records {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.record-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.record-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.record-type {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.record-value {
  font-size: 32rpx;
  color: #667eea;
  font-weight: 500;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

/* 空记录提示 */
.empty-records {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 60rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.modal.show {
  visibility: visible;
  opacity: 1;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.modal-body {
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-group .label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.input-group input,
.input-group .picker {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: #667eea;
  color: white;
}

.cancel-btn::after,
.confirm-btn::after {
  border: none;
}