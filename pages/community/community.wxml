<view class="container">
  <!-- 发布按钮 -->
  <view class="publish-btn" bindtap="goToCreatePost">
    <text class="publish-icon">+</text>
    <text class="publish-text">发布动态</text>
  </view>

  <!-- 帖子列表 -->
  <view class="post-list">
    <view wx:for="{{posts}}" wx:key="id" class="post-item" bindtap="goToPostDetail" data-id="{{item.id}}">
      <!-- 用户信息 -->
      <view class="user-info">
        <image class="avatar" src="{{item.userAvatar || '/images/profile.png'}}" mode="aspectFill"></image>
        <view class="user-meta">
          <text class="nickname">{{item.userNickname || '匿名用户'}}</text>
          <text class="time">{{item.createTime}}</text>
        </view>
      </view>

      <!-- 帖子内容 -->
      <view class="post-content">
        <text class="post-title" wx:if="{{item.title}}">{{item.title}}</text>
        <text class="post-text">{{item.content}}</text>
      </view>

      <!-- 帖子图片 -->
      <view class="post-images" wx:if="{{item.images}}">
        <image wx:for="{{item.imageList}}" wx:key="*this" wx:for-item="img" 
               class="post-image" src="{{img}}" mode="aspectFill"></image>
      </view>

      <!-- 帖子标签 -->
      <view class="post-tags" wx:if="{{item.tags}}">
        <text wx:for="{{item.tagList}}" wx:key="*this" wx:for-item="tag" class="tag">#{{tag}}</text>
      </view>

      <!-- 帖子统计 -->
      <view class="post-stats">
        <view class="stat-item">
          <image class="stat-icon" src="/images/home.png"></image>
          <text class="stat-text">{{item.viewCount || 0}}</text>
        </view>
        <view class="stat-item" catchtap="likePost" data-id="{{item.id}}">
          <image class="stat-icon" src="/images/home-active.png"></image>
          <text class="stat-text">{{item.likeCount || 0}}</text>
        </view>
        <view class="stat-item">
          <image class="stat-icon" src="/images/chat.png"></image>
          <text class="stat-text">{{item.commentCount || 0}}</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 加载更多 -->
  <view class="load-more" wx:if="{{loading}}">
    <text>加载中...</text>
  </view>
  <view class="no-more" wx:if="{{!hasMore && posts.length > 0}}">
    <text>没有更多了</text>
  </view>

  <!-- 空状态 -->
  <view class="empty-state" wx:if="{{!loading && posts.length === 0}}">
    <image class="empty-image" src="/images/home.png"></image>
    <text class="empty-text">还没有帖子，快来发布第一条吧~</text>
  </view>
</view>
