<view class="container">
  <!-- 轮播图 -->
  <swiper class="banner" indicator-dots autoplay circular interval="3000">
    <swiper-item wx:for="{{banners}}" wx:key="id">
      <view class="banner-item" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <image class="banner-image" src="{{item.image}}" mode="aspectFit"></image>
        <text class="banner-title">{{item.title}}</text>
      </view>
    </swiper-item>
  </swiper>

  <!-- 功能入口 -->
  <view class="feature-section">
    <view class="section-title">快捷功能</view>
    <view class="feature-grid">
      <view wx:for="{{features}}" wx:key="id" class="feature-item" bindtap="goToFeature" data-path="{{item.path}}">
        <text class="feature-icon">{{item.icon}}</text>
        <text class="feature-name">{{item.name}}</text>
      </view>
    </view>
  </view>

  <!-- 热门帖子 -->
  <view class="hot-section">
    <view class="section-header">
      <text class="section-title">热门话题</text>
      <text class="more-link" bindtap="goToCommunity">查看更多 ></text>
    </view>
    <view class="post-list">
      <view wx:for="{{hotPosts}}" wx:key="id" class="post-card" bindtap="goToPost" data-id="{{item.id}}">
        <view class="post-header">
          <image class="post-avatar" src="{{item.avatar}}" mode="aspectFill"></image>
          <text class="post-author">{{item.author}}</text>
        </view>
        <text class="post-title">{{item.title}}</text>
        <text class="post-content">{{item.content}}</text>
        <view class="post-footer">
          <text class="post-likes">❤ {{item.likes}}</text>
        </view>
      </view>
    </view>
  </view>
</view>
