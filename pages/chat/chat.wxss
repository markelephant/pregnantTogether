.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

/* 导航栏 */
.nav-bar {
  height: 88rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.back-btn {
  font-size: 40rpx;
  color: #333;
  width: 60rpx;
}

.nav-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.placeholder {
  width: 60rpx;
}

/* 消息列表 */
.message-list {
  flex: 1;
  padding: 20rpx;
}

.message-item {
  display: flex;
  margin-bottom: 30rpx;
}

.message-item.self {
  flex-direction: row-reverse;
}

.message-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.message-item.self .message-avatar {
  margin-left: 20rpx;
}

.message-item.other .message-avatar {
  margin-right: 20rpx;
}

.message-content {
  max-width: 60%;
  display: flex;
  flex-direction: column;
}

.message-item.self .message-content {
  align-items: flex-end;
}

.message-item.other .message-content {
  align-items: flex-start;
}

.message-bubble {
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  max-width: 100%;
}

.message-item.self .message-bubble {
  background: #667eea;
}

.message-item.other .message-bubble {
  background: white;
}

.message-text {
  font-size: 30rpx;
  line-height: 1.5;
  word-wrap: break-word;
}

.message-item.self .message-text {
  color: white;
}

.message-item.other .message-text {
  color: #333;
}

.message-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 输入框 */
.input-bar {
  background: white;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.message-input {
  flex: 1;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
}

.send-btn {
  width: 120rpx;
  height: 80rpx;
  background: #667eea;
  color: white;
  border-radius: 40rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.send-btn::after {
  border: none;
}

.send-btn[disabled] {
  background: #ccc;
}
