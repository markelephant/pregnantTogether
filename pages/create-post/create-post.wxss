/* 页面容器 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
  padding-bottom: 180rpx;
  box-sizing: border-box;
}

/* 输入框通用样式 */
.input-group {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* 标题输入 */
.title-input {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}

/* 内容输入区域 */
.content-group {
  position: relative;
  padding-bottom: 60rpx;
  width: 100%;
  box-sizing: border-box;
}

.content-input {
  width: 100% !important;
  height: 400rpx;
  min-height: 400rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
  padding: 10rpx 0;
  margin: 0;
  box-sizing: border-box;
  display: block;
}

/* 字数统计 */
.word-count {
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
  font-size: 24rpx;
  color: #999;
  background: white;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 图片区域 */
.image-section,
.tag-section {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

/* 图片列表 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ff5252;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  line-height: 40rpx;
}

.add-image {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fafafa;
}

.add-icon {
  font-size: 60rpx;
  color: #999;
  line-height: 1;
}

/* 标签区域 */
.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  align-items: center;
}

.tag-item {
  display: flex;
  align-items: center;
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  padding: 12rpx 20rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.delete-tag {
  margin-left: 10rpx;
  color: #999;
  font-size: 24rpx;
}

.tag-input-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 30rpx;
  padding: 10rpx 16rpx;
  height: 60rpx;
  box-sizing: border-box;
}

.tag-input {
  width: 140rpx;
  font-size: 26rpx;
  height: 40rpx;
  line-height: 40rpx;
  min-height: 40rpx;
}

.add-tag-btn {
  width: 40rpx;
  height: 40rpx;
  background: #667eea;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-left: 10rpx;
  line-height: 1;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx 40rpx;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.cancel-btn,
.submit-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  line-height: 88rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.submit-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.cancel-btn::after,
.submit-btn::after {
  border: none;
}

.submit-btn[disabled] {
  opacity: 0.6;
}
